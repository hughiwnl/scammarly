{
  "manifest_version": 3,
  "name": "Scammarly - Typo Generator",
  "version": "1.0",
  "description": "A Chrome extension that randomly adds typing errors to your text, like Grammarly but in reverse!",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scammarly - Typo Generator"
  }
}
